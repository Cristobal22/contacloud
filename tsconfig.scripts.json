    "module": "commonjs",
    "moduleResolution": "node", 
    "noEmit": false,
    "outDir": "dist/scripts",
    "noImplicitAny": false // <-- AÑADIDO: Ignora los errores de tipado implícito para el script
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    ".next"
  ]
}
