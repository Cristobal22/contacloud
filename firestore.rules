rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isUserAssociatedWithCompany(companyId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'companyIds' in userDoc.data &&
             companyId in userDoc.data.companyIds;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    //--- User Profile Rules ---//
    match /users/{userId} {
      allow get: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow list: if isAdmin();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // Rules for subcollections of a user (e.g., notifications)
    match /users/{userId}/{collection} {
        allow list, create: if isSignedIn() && request.auth.uid == userId;
    }
    match /users/{userId}/{collection}/{docId} {
      allow get, update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    //--- Company Rules ---//
    match /companies/{companyId} {
      allow get: if isUserAssociatedWithCompany(companyId);
      allow update: if isUserAssociatedWithCompany(companyId);
      allow create, delete, list: if false; // Security: No direct manipulation/listing of companies.
    }

    // --- Generic rules for ALL company subcollections ---
    // This is the definitive fix: Allows listing AND creation at the collection level.
    match /companies/{companyId}/{subcollection} {
      allow list, create: if isUserAssociatedWithCompany(companyId);
    }

    // This rule now only needs to handle operations on existing documents.
    match /companies/{companyId}/{subcollection}/{docId} {
      allow get, update, delete: if isUserAssociatedWithCompany(companyId);
    }
    
    // --- GLOBAL READABLE COLLECTIONS ---
    // Rules are correctly split for document access (get, write) and collection access (list, create).

    match /monthlyParameters                { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /monthlyParameters/{docId}        { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /economic-indicators              { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /economic-indicators/{docId}      { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /health-entities                  { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /health-entities/{docId}          { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /afp-entities                     { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /afp-entities/{docId}             { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /family-allowance-parameters      { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /family-allowance-parameters/{docId} { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /tax-parameters                   { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /tax-parameters/{docId}           { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }

    match /taxable-caps                     { allow list: if isSignedIn(); allow create: if isAdmin(); }
    match /taxable-caps/{docId}             { allow get: if isSignedIn(); allow update, delete: if isAdmin(); }
  }
}
