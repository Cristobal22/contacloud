rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
    }

    function isUserAssociatedWithCompany(companyId) {
      return isSignedIn() && (companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyIds);
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if (isOwner(userId) && request.resource.data.uid == userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /companies/{companyId} {
      allow get, list: if isUserAssociatedWithCompany(companyId);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isUserAssociatedWithCompany(companyId);
      allow delete: if isUserAssociatedWithCompany(companyId);
    }

    // Explicit rules for all company subcollections
    match /companies/{companyId}/accounts/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/vouchers/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/subjects/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/cost-centers/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/employees/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/payrolls/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/documents/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/purchases/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/sales/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }
    match /companies/{companyId}/fees/{docId} { allow read, write: if isUserAssociatedWithCompany(companyId); }

    match /companies/{companyId}/economic-indicators/{indicatorId} {
      allow get, list: if isUserAssociatedWithCompany(companyId);
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId}/account-groups/{accountGroupId} {
      allow read, write: if isOwner(userId);
    }

    // Public or Admin-only collections
    match /economic-indicators/{indicatorId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
    match /health-entities/{entityId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
    match /afp-entities/{entityId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
    match /family-allowance-parameters/{paramId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
    match /tax-parameters/{paramId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
    match /taxable-caps/{capId} { allow get, list: if true; allow create, update, delete: if isAdmin(); }
  }
}
